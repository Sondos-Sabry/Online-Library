<h1 style="padding-left:20px; padding-top:20px; color: #d9b5a0">Register</h1>

@*<div style="border: 1px solid #d9b5a0; border-radius: 8px; margin-left: 100px; margin-right: 434px; margin-bottom: 60px;" class="col-12 col-lg-4 ">*@
   <div class="container" >
      <div class="row"  style="border: 1px solid #d9b5a0; border-radius: 8px; ">
        <div class="col-12  col-lg-12">
<form method="post" style="padding: 25px; padding-bottom: 10px;  margin-right: 0px;">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group" style=" padding-bottom: 15px;">
        <label asp-for=name >Name</label>
        <input class="form-control" asp-for=name >
        <span asp-validation-for="name" class="text-danger"></span>
   </div>

    <div class="form-group" style=" padding-bottom: 15px;">
        <label asp-for=username >User Name</label>
        <input  class="form-control" asp-for=username >
        <span asp-validation-for="username"  class="text-danger"></span>
   </div>
  
    <div class="form-group" style=" padding-bottom: 15px;">
        <label asp-for=password  >Password</label>
        <input  type="password"  class="form-control" asp-for=password >
        <span asp-validation-for="password" class="text-danger"></span>
   </div>

    <div class="form-group" style=" padding-bottom: 15px;">
        <label asp-for=confirm_password >Confirm Password</label>
        <input  type="password"  class="form-control" asp-for=confirm_password >
        <span asp-validation-for="confirm_password" class="text-danger"></span>
   </div>

    <div class="form-group" style=" padding-bottom: 15px;">
        <label asp-for=email  >Email</label>
        <input class="form-control" asp-for=email >
        <span asp-validation-for="email" class="text-danger"></span>
   </div>

    <div class="form-group" style=" padding-bottom: 15px;">
        <label asp-for=age >Age</label>
        <input  class="form-control" asp-for=age >
        <span asp-validation-for="age" class="text-danger"></span>
   </div>
   <br />
    <div class="form-group" style="padding-bottom:20px;">
    <input type="submit" value="Register" class="btn btn-info" style="background-color:#d9b5a0;"/>
  </div>

</form>

</div>
 </div>

 </div>

