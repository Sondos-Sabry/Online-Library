@model IEnumerable<mvc_4.Models.Catalog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 style="color:#d9b5a0;">Category</h1>

<p>
    <a asp-action="Create" style="color:#d9b5a0;text-decoration:none">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cat_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cat_desc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cat_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cat_desc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.cat_id" style="color:#d9b5a0;text-decoration:none">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.cat_id"style="color:#d9b5a0;text-decoration:none">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.cat_id"style="color:#d9b5a0;text-decoration:none">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
